<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="30dp"
    card_view:cardBackgroundColor="@color/semiTransparentColor"
    android:elevation="30dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroungcardv"
        android:padding="30dp"
        android:elevation="30dp"
        >




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ShowStudentProfile"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@android:drawable/ic_menu_camera"
            android:gravity="left"
            app:civ_border_width="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            app:civ_border_color="#FFFFFF"
            />

        <TextView
            android:layout_toEndOf="@id/ShowStudentProfile"
            android:id="@+id/ShowStudentNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:textSize="17dp"

            />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ShowStudentNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:layout_below="@+id/ShowStudentNameTextView"
            android:layout_toEndOf="@+id/ShowStudentProfile" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ShowStudentEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:layout_below="@+id/ShowStudentNumberTextView"
            android:layout_toEndOf="@+id/ShowStudentProfile" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>